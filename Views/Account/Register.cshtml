@model RegisterModel

<h2>Регистрация</h2>

<form asp-action="Register" asp-controller="Account" asp-antiforgery="true">
    <div class="validation" asp-validation-summary="All"></div>
    <div>
        <div class="form-group">
            <label asp-for="Name">Введите Имя</label>
            <input type="text" asp-for="Name" />
        </div>
        <div class="form-group">
            <label asp-for="Email">Введите Email</label>
            <input type="text" asp-for="Email" />
        </div>
        <div class="form-group">
            <label asp-for="Password">Введите пароль</label>
            <input asp-for="Password" />
        </div>
        <div class="form-group">
            <label asp-for="ConfirmPassword">Повторите пароль</label>
            <input asp-for="ConfirmPassword" />
        </div>

        <div>
            <input type="submit" value="Регистрация" />
        </div>
    </div>
</form>