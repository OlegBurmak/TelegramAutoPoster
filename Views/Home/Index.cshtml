@using System.Security.Claims
 
<div id="wrapper">
    @await Html.PartialAsync("NavMenuSummary") 
    <!-- Content Wrapper -->
    <div id="content-wrapper" class="d-flex flex-column">
      <!-- Main Content -->
      <div id="content">
        @await Component.InvokeAsync("NavigationTopMenu")

        <div class="container-fluid">
          <!-- Page Heading -->
          
          <div class="jumbotron">
            <h1 class="display-4">Welcome to TAP!</h1>
            <p class="lead">This is a manual for getting started</p>
            <hr class="my-4">
            <p>Change user settings, such as VK and telegram tokens.</p>
            <p class="lead">
              <a class="btn btn-primary btn-lg" asp-action="EditSetting" asp-controller="Account">Edit user setting</a>
            </p>
            <hr class="my-4">
            <p>Add posting settings, such as a link to a VK group, number of posts, filters.</p>
            <p class="lead">
              <a class="btn btn-primary btn-lg" asp-action="AddPostSetting" asp-controller="Post">Add post setting</a>
            </p>
            <hr class="my-4">
            <p>Start posting in telegram.</p>
            <p class="lead">
              <a class="btn btn-primary btn-lg" asp-action="Posts" asp-controller="Post">Start posting telegram</a>
            </p>
          </div>

        </div>

      </div>
    </div>
</div>