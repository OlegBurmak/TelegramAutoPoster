@model User

<div id="wrapper">
    @await Html.PartialAsync("NavMenuSummary") 
    <!-- Content Wrapper -->
    <div id="content-wrapper" class="d-flex flex-column">
      <!-- Main Content -->
      <div id="content">
        @await Component.InvokeAsync("NavigationTopMenu")

        <div class="container-fluid">

            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <div class="btn-toolbar justify-content-between" role="toolbar" aria-label="Toolbar with button groups">
                        <div class="btn-group" role="group" aria-label="First group">
                            <a asp-action="AddPostSetting" asp-controller="Post" class="btn btn-success">Add</a>
                            <a asp-action="Posts" asp-controller="Post" class="btn btn-success">Start</a>
                        </div>
                        <div>
                            <h6 class="m-0 font-weight-bold text-primary">DataTables Example</h6>
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                            <thead>
                            <tr>
                                <th>Group Url</th>
                                <th>Post Count</th>
                                <th>Post Filter</th>
                                <th>Post Deley(Minute)</th>
                                <th>Settings</th>
                                <th>Post</th>
                            </tr>
                            </thead>
                            <tfoot>
                            <tr>
                                <th>Group Url</th>
                                <th>Post Count</th>
                                <th>Post Filter</th>
                                <th>Post Deley(Minute)</th>
                                <th>Settings</th>
                                <th>Post</th>
                            </tr>
                            </tfoot>
                            <tbody>
                                @foreach(var item in Model.PostSettings)
                                {
                                    @await Html.PartialAsync("PostItemSummary", item)
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

        </div>

      </div>
    </div>
</div>