@model List<VkPostItem>



<div id="wrapper">
    @await Html.PartialAsync("NavMenuSummary") 
    <!-- Content Wrapper -->
    <div id="content-wrapper" class="d-flex flex-column">
      <!-- Main Content -->
      <div id="content">
        @await Component.InvokeAsync("NavigationTopMenu")

        <div class="container-fluid">
          
            @await Html.PartialAsync("CardsPostSummary", @Model)

            <div class="card-body">
                <a asp-action="PostTelegram" asp-controller="Post" class="btn btn-success">
                Post to telegram
                </a>
                @for(int i = 0; i < @Model.Count; i++)
                {
                    
                    <div class="card">
                    <div class="card-header">
                        @Model[i].PostType - Тип поста
                    </div>
                        <div class="card-body">
                            <h5 class="card-title">@Model[i].Url</h5>
                            <p class="card-text">@Model[i].Text</p>
                            <p class="card-text">@Model[i].Date - Дата</p>
                            <p class="card-text">@Model[i].Comment - Комментарии</p>
                            <p class="card-text">@Model[i].Like - Лайки</p>
                            <p class="card-text">@Model[i].Reposts - Рапосты</p>
                            <p class="card-text">@Model[i].Views - Просмотры</p>
                        </div>
                    </div>
                }
                <a asp-action="PostTelegram" asp-controller="Post" class="btn btn-success">
                Post to telegram
                </a>
            </div>

        </div>

      </div>
    </div>
</div>
