@model List<VkPostItem>



<div id="wrapper">
    @await Html.PartialAsync("NavMenuSummary") 
    <!-- Content Wrapper -->
    <div id="content-wrapper" class="d-flex flex-column">
      <!-- Main Content -->
      <div id="content">
        @await Component.InvokeAsync("NavigationTopMenu")

        <div class="container-fluid">
          
            @await Html.PartialAsync("CardsPostSummary", @Model)

            <div class="card-body">
                <a asp-action="PostTelegram" asp-controller="Post" class="btn btn-success">
                Post to telegram
                </a>
                <a asp-action="AddPostItem" asp-controller="Post" class="btn btn-success">Add post</a>
                <a asp-action="DeletePostItemAll" asp-controller="Post" class="btn btn-danger">Delete all</a>
                @foreach(var item in Model)
                {
                    
                    <div class="card">
                        <div class="card-header">
                            @item.PostType - Тип поста
                        </div>
                        <div class="card-body">
                            <h5 class="card-title">@item.Url</h5>
                            <p class="card-text">@item.Text</p>
                            <p class="card-text">@item.Date - Дата</p>
                            <p class="card-text">@item.Comment - Комментарии</p>
                            <p class="card-text">@item.Like - Лайки</p>
                            <p class="card-text">@item.Reposts - Рапосты</p>
                            <p class="card-text">@item.Views - Просмотры</p>
                            
                            <a asp-action="EditPostItem" asp-controller="Post" 
                                asp-route-postItemId="@item.VkPostItemId " class="btn btn-primary">
                            Edit
                            </a>
                            <a class="btn btn-danger" asp-controller="Post"
                                asp-action="DeletePostItem" asp-route-postItemId="@item.VkPostItemId">Delete</a>
                        </div>
                    </div>
                }
                <a asp-action="PostTelegram" asp-controller="Post" class="btn btn-success">
                Post to telegram
                </a>
            </div>

        </div>

      </div>
    </div>
</div>
