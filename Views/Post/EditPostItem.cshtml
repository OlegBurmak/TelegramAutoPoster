@model VkPostItem


<div class="content">
    <div class="row">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h5 class="title">Edit Post Item</h5>
                </div>
                <div class="card-body">
                    <form asp-action="EditPostItem" asp-controller="Post" asp-antiforgery="true">
                        <div class="validation" asp-validation-summary="ModelOnly"></div>
                        <div>
                            <div class="form-group">
                                <input type="hidden" asp-for="VkPostItemId" />
                            </div>
                            <div class="form-group">
                                <label asp-for="Text">Введите Text</label>
                                <textarea cols="75" asp-for="Text"></textarea>
                                <span asp-validation-for="Text" ></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Url">Введите Url</label>
                                <textarea cols="75" asp-for="Url"></textarea>
                                <span asp-validation-for="Url" ></span>
                            </div>
                            <div class="form-group">
                                <input type="submit" value="Edit" class="btn btn-outline-dark" />
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>